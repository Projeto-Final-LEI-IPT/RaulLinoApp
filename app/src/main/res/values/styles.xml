<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Cores -->
    <color name="text_color">#000000</color>
    <color name="text_colorSecondary">#272133</color>
    <color name="navicons_color">#155945</color>
    <color name="subheader_color">#078C6B</color>
    <color name="background_color">#FFFFFF</color>
    <color name="white_variant">#EAD8C1</color>
    <color name="accent_color">#FFD683</color>
    <color name="accent_colorSecondary">#FBAB1F</color>

    <!-- Tirar barra superior
    <style name="Tema" parent="Theme.AppCompat.NoActionBar">
    -->
    <style name="Tema" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/navicons_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_color</item>
        <!-- Coloca os icons da status bar a preto -->
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <!-- Define o estilo para o cabeÃ§alho -->
    <style name="HeaderStyle">
        <item name="android:textColor">@color/subheader_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Define a cor para o texto "Raul Lino" -->
    <style name="RaulLinoIconStyle">
        <item name="android:textColor">@color/subheader_color</item>
    </style>

    <style name="HorizontalTitleLine">
        <item name="android:layout_height">4dp</item>
        <item name="android:background">@color/accent_color</item>
    </style>

    <!-- Define a cor da barra de ativos na navbar -->
    <style name="ActiveNavigationStyle">
        <item name="android:background">@color/accent_color</item>
    </style>
</resources>
