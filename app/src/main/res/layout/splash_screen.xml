<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="130dp"
        android:src="@drawable/raulino_logo" />

    <TextView
        android:id="@+id/text_biography"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:fontFamily="@font/raul_lino_fonte_acento"
        android:gravity="center"
        android:text="@string/raul_Lino"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintTop_toBottomOf="@id/imageView3" />

    <ImageView
        android:id="@+id/btn_EN"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/text_biography"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/en_flag_square" />

    <ImageView
        android:id="@+id/btn_PT"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/text_biography"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/pt_flag_square" />

</RelativeLayout>
